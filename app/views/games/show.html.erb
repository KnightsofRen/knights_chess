<div class="background">
  <br class="clr" />
  <div class="panel panel-default shadow">
    <div class="panel-heading">
      <h3 class="panel-title text-center"><%= current_game.name %></h3>
    </div>
    <div class="panel-body">
      <div class="col-xs-2 text-left">
        <%= image_tag player('white').gravatar_url %>
      </div>
      <div class="col-xs-3 text-left">
        <%= player('white').username %>
        <hr class="hr-style">
        <small style="font-style: italic">white</small>
      </div>
      <div class="col-xs-2 text-center">
        <h1 style="font-style: italic">vs.</h1>
      </div>
      <div class="col-xs-3 text-right">
        <%= "?" if player('white').nil? %>
        <%= player('black').username if player('black').present? %>
        <hr class="hr-style">
        <small style="font-style: italic">black</small>
      </div>
      <div class="col-xs-2 text-right">
        <%= image_tag player('black').gravatar_url if player('black').present? %>
      </div>
    </div>
  </div>

  <br class="clr" />

  <div class="game-background">
     <br class="clr" />
     <div class="chessboard">
        <% (0..7).each do |y| %>
          <% (0..7).each do |x| %>
            <% if (x.even? && y.odd?) || (x.odd? && y.even?) %>
              <div class="black-tile"><%= render_piece(x,(y-7).abs) %></div>
            <% else %>
              <div class="white-tile"><%= render_piece(x,(y-7).abs) %></div>
            <% end %>
          <% end %>
        <% end %>
        <br class="clr" />
     </div>
  </div>
  <br class="clr" />
</div>



<br class="clr" />
<p><%= link_to 'Edit/Update', edit_game_path(current_game) %></p>
<p><%= link_to 'Delete', '#', method: :delete %></p>
