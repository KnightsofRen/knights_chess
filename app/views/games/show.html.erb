<%= current_game.inspect %><br/>
<%= link_to 'Edit/Update', edit_game_path(current_game) %><br/>
<%= link_to 'Delete', '#', method: :delete %>

<div>
  <a name="chess-game"><p class="invisible-text">!</p></a>
  <br class="clr" />

  <div class="test col-xs-10 col-xs-offset-1">

    <div class="col-xs-8">
      <div class="game-background">
        <br class="clr" />

        <div class="chessboard">
          <% (0..7).each do |y| %>
            <% (0..7).each do |x| %>
              <% if (x.even? && y.odd?) || (x.odd? && y.even?) %>
                <div class="black-tile">
                  <%= link_to "#{render_piece(current_game, x,(y-7).abs)}", game_piece_path(game_id: current_game.id, id: "#{piece_id(x,(y-7).abs)}") %>
                </div>
              <% else %>
                <div class="white-tile">
                  <%= link_to "#{render_piece(current_game, x,(y-7).abs)}", game_piece_path(game_id: current_game.id, id: "#{piece_id(x,(y-7).abs)}") %>
                </div>
              <% end %>
            <% end %>
          <% end %>
          <br class="clr" />
         </div>
      </div>
    </div>

    <div class="col-xs-4">
      <br class="clr" />
      <%-# <%= link_to 'Forfeit', forfeit_game_path, method: :put %>
      <div class="panel panel-default shadow">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><%= current_game.name %></h3>
        </div>
        <div class="panel-body">
          <div>
            <div class="col-xs-4 text-center">
              <%= image_tag player('white').gravatar_url if player('white').present? %>
              <h5 class="invisible-text"><%= "?" if player('white').nil? %></h5>
              <h5><%= player('white').username if player('white').present? %></h5>
              <hr class="hr-style">
              <small>white</small>
            </div>
            <div class="col-xs-4 text-center">
              <h1>vs.</h1>
            </div>
            <div class="col-xs-4 text-center">
              <%= image_tag player('black').gravatar_url if player('black').present? %>
              <h5 class="invisible-text"><%= "?" if player('black').nil? %></h5>
              <h5><%= player('black').username if player('black').present? %></h5>
              <hr class="hr-style">
              <small>black</small>
            </div>
          <div>
        </div>
      </div>
    </div>

  </div>

  <br class="clr" />
  <br class="clr" />
  <br class="clr" />
</div>